# ============================================
# CV Platform Environment Variables
# ============================================

# ============================================
# AI PROVIDERS (Primary: Replicate)
# ============================================

# Replicate - PRIMARY AI Provider
# Получить ключ: https://replicate.com/account/api-tokens
# Добавить карту: https://replicate.com/account/billing
VITE_REPLICATE_API_KEY=your_replicate_api_key_here
VITE_REPLICATE_ENABLED=true

# Доступные модели на Replicate:
# - llama-8b (default, баланс цена/качество) - $0.05/$0.25 per 1M tokens
# - llama-3b (быстро и дёшево) - $0.05/$0.10 per 1M tokens
# - llama-70b (высокое качество) - $0.65/$2.75 per 1M tokens
# - mistral-7b (хорошая альтернатива) - $0.05/$0.25 per 1M tokens
# - qwen-7b (отличная мультиязычность RU/EN) - $0.05/$0.25 per 1M tokens
# - qwen-72b (лучшее качество для мультиязычности) - $0.40/$1.40 per 1M tokens

# OpenAI - Backup/Premium Provider (опционально)
# Получить ключ: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=
VITE_OPENAI_ENABLED=false

# fal.ai - НЕ ИСПОЛЬЗУЕТСЯ (нет текстовых моделей)
VITE_FAL_API_KEY=
VITE_FAL_ENABLED=false

# ============================================
# YandexGPT (для лучшей поддержки русского языка)
# ============================================
# Документация: https://cloud.yandex.ru/docs/yandexgpt/
# 
# Шаги настройки:
# 1. Зарегистрируйтесь в Yandex Cloud: https://cloud.yandex.ru/
# 2. Создайте платёжный аккаунт (есть грант на старт)
# 3. Создайте folder в консоли
# 4. Получите API ключ: https://cloud.yandex.ru/docs/iam/operations/api-key/create
# 5. Включите YandexGPT API в настройках сервиса

# API ключ YandexGPT
VITE_YANDEX_API_KEY=

# ID папки (folder) в Yandex Cloud
VITE_YANDEX_FOLDER_ID=

# Включить YandexGPT (при наличии ключей)
# Если true - для русского текста будет использоваться YandexGPT
VITE_YANDEX_ENABLED=false

# Доступные модели YandexGPT:
# - yandexgpt-lite (быстрая, для простых задач)
# - yandexgpt (основная, баланс качества)
# - yandexgpt-32k (для длинных текстов)

# ============================================
# AI SETTINGS
# ============================================

# Режим работы AI
# true = использовать моки (для разработки без API ключей)
# false = использовать реальные API через Replicate
VITE_AI_MOCK_MODE=false

# Default AI provider (replicate | openai)
VITE_AI_DEFAULT_PROVIDER=replicate

# Предпочитаемая модель (llama-8b | llama-3b | llama-70b | qwen-7b | mistral-7b)
VITE_AI_DEFAULT_MODEL=llama-8b

# Таймаут для AI запросов (в миллисекундах)
VITE_AI_TIMEOUT_MS=60000

# Максимальное количество retry при ошибках
VITE_AI_MAX_RETRIES=2

# ============================================
# APPLICATION SETTINGS
# ============================================

VITE_APP_NAME=CV Platform
VITE_APP_VERSION=0.3.0
VITE_API_BASE_URL=http://localhost:3001

# Язык по умолчанию (ru | en)
VITE_DEFAULT_LOCALE=ru

# ============================================
# FEATURE FLAGS
# ============================================

# Включить PII маскирование (рекомендуется true)
VITE_ENABLE_PII_MASKING=true

# Включить AI Chat
VITE_ENABLE_AI_CHAT=true

# Включить Cover Letter генератор
VITE_ENABLE_COVER_LETTER=true

# ============================================
# RATE LIMITING & PLANS
# ============================================

# Free Plan
VITE_FREE_PLAN_AI_REQUESTS_PER_DAY=3
VITE_FREE_PLAN_WATERMARK=true
VITE_FREE_PLAN_BULLET_VARIANTS=1

# Pro Plan
VITE_PRO_PLAN_AI_REQUESTS_PER_DAY=999999
VITE_PRO_PLAN_BULLET_VARIANTS=3

# Global rate limit (requests per minute)
VITE_MAX_AI_REQUESTS_PER_MINUTE=50

# ============================================
# ANALYTICS & MONITORING (optional)
# ============================================

# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry Error Tracking
VITE_SENTRY_DSN=

# PostHog Product Analytics
VITE_POSTHOG_KEY=

# ============================================
# DEVELOPMENT
# ============================================

# Включить debug логирование
VITE_DEBUG=false

# Показывать AI статистику в консоли
VITE_SHOW_AI_STATS=true
